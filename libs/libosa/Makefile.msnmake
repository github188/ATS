	@copy  "src\common\osa_mem.c" "$(BUILD_DIR)\osa_mem.cpp"
	@copy  "src\common\osa_msg.c" "$(BUILD_DIR)\osa_msg.cpp"
	@copy  "src\common\osa_random.c" "$(BUILD_DIR)\osa_random.cpp"
   
